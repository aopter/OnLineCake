<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/recipes_item"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="10dp">

    <LinearLayout
        android:id="@+id/recipce_info1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="2dp">

        <ImageView
            android:id="@+id/recipe_photo1"
            android:layout_width="match_parent"
            android:layout_height="150dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">

            <TextView
                android:id="@+id/recipe_name1"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_alignParentLeft="true"
                android:gravity="center_vertical"
                android:text="菜谱名字"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/recipe_type1"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/recipe_name1"
                android:gravity="center_vertical"
                android:text="菜谱类型"
                android:textSize="12sp" />

        </RelativeLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/recipce_info2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="2dp">

        <ImageView
            android:id="@+id/recipe_photo2"
            android:layout_width="match_parent"
            android:layout_height="150dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">

            <TextView
                android:id="@+id/recipe_name2"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_alignParentLeft="true"
                android:gravity="center_vertical"
                android:text="菜谱名字"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/recipe_type2"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/recipe_name2"
                android:gravity="center_vertical"
                android:text="菜谱类型"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/recipes_like2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="0dp"
                android:drawableLeft="@drawable/recipelike"
                android:gravity="center_vertical"
                android:text="点赞数"
                android:textSize="12sp" />
        </RelativeLayout>


    </LinearLayout>

</LinearLayout>